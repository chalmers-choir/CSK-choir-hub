{
  "printWidth": 100,
  "tabWidth": 2,
  "semi": true,
  "singleQuote": false,
  "trailingComma": "all",
  "arrowParens": "always",
  "plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"],
  "importOrder": [
    "^react$",
    "^next/link$",
    "^next(/.*)?$",
    "^clsx$",
    "^@mui/(.*)$",
    "^@heroui/(.*)$",
    "^@server/(.*)$",
    "^@client/(.*)$",
    "^@components/(.*)$",
    "^@pages/(.*)$",
    ""
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "overrides": [
    {
      "files": ["*.json", "*.yml"],
      "options": { "printWidth": 80 }
    }
  ]
}

{
  "name": "choir-hub",
  "version": "1.0.0",
  "description": "Choir Hub - A project aimed to simplify the communication within CSK",
  "main": "server/dist/index.js",
  "scripts": {
    "db:up": "cd server && docker compose up -d db",
    "db:reset": "node scripts/db-reset.mjs",
    "setup": "npm run setup:dev",
    "setup:dev": "node scripts/setup-dev.mjs",
    "setup:prod": "node scripts/setup-prod.mjs",
    "check": "node scripts/check.mjs",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "npm run server:build && npm run client:build",
    "prod": "concurrently \"npm run server:prod\" \"npm run client:prod\"",
    "server": "cd server && npm run dev",
    "server:prod": "cd server && npm run start",
    "server:build": "cd server && npm run build",
    "client": "cd client && npm run dev",
    "client:prod": "cd client && npm run start",
    "client:build": "cd client && npm run build",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "prisma:generate": "cd server && npx prisma generate",
    "type-check": "cd server && npm run type-check && cd ../client && npm run type-check",
    "lint": "eslint . --fix",
    "lint:check": "eslint . --max-warnings=0",
    "lint:format": "eslint . --fix && prettier --write .",
    "format": "prettier . --write",
    "format:check": "prettier . --check"
  },
  "keywords": [
    "react",
    "nodejs",
    "postgresql",
    "express",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/compat": "1.2.8",
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.25.1",
    "@next/eslint-plugin-next": "^16.1.6",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.6",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-i18next": "^6.1.3",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-prettier": "5.5.0",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-unused-imports": "4.1.4",
    "globals": "16.0.0",
    "next": "^16.1.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14"
  }
}

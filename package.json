{
  "name": "choir-hub",
  "version": "1.0.0",
  "description": "Choir Hub - A project aimed to simplify the communication within CSK",
  "main": "server/dist/index.js",
  "scripts": {
    "prisma:generate": "cd server && npx prisma generate",
    "dev": "npm run docker:up && concurrently \"npm run server\" \"npm run client\"",
    "dev:local": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev",
    "build": "cd server && npm run build && cd ../client && npm run build",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "setup-db": "cd server && npm run setup-db",
    "setup": "node scripts/setup.mjs",
    "type-check": "cd server && npm run type-check && cd ../client && npm run type-check",
    "docker:up": "cd server && docker-compose up -d",
    "docker:down": "cd server && docker-compose down",
    "docker:logs": "cd server && docker-compose logs -f",
    "docker:ps": "cd server && docker-compose ps",
    "docker:restart": "cd server && docker-compose down && docker-compose up -d",
    "docker:start": "cd server && docker-compose start db",
    "lint": "eslint . --fix",
    "lint:check": "eslint . --max-warnings=0",
    "lint:format": "eslint . --fix && prettier --write .",
    "format": "prettier . --write",
    "format:check": "prettier . --check"
  },
  "keywords": [
    "react",
    "nodejs",
    "postgresql",
    "express",
    "typescript",
    "vite"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/compat": "1.2.8",
    "@eslint/js": "9.25.1",
    "@next/eslint-plugin-next": "^16.1.6",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.39.2",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-prettier": "5.5.0",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-unused-imports": "4.1.4",
    "globals": "16.0.0",
    "next": "^16.1.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14"
  }
}

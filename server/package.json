{
  "name": "choir-hub-server",
  "version": "1.0.0",
  "description": "Backend server for Choir Hub application",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "concurrently -k -n api,server \"npm run api:watch\" \"npm run dev:server\"",
    "dev:server": "nodemon",
    "api:generate": "openapi --input ./src/api/docs/openapi.yaml --output ../client/lib/api-client --client fetch --useOptions --useUnionTypes",
    "api:watch": "chokidar \"src/api/**/*.yaml\" -c \"npm run api:generate\"",
    "build": "tsc && tsc-alias",
    "setup-db": "ts-node src/scripts/setup-database.ts",
    "type-check": "tsc --noEmit",
    "test": "jest"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.3.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "winston": "^3.17.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.19.13",
    "@types/pg": "^8.15.5",
    "jest": "^30.1.3",
    "nodemon": "^3.0.2",
    "openapi-typescript-codegen": "^0.30.0",
    "prisma": "^7.3.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "tsc-alias": "^1.8.10",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.2"
  }
}
